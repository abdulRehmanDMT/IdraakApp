            <StackLayout 
                Padding="30,0"
                Spacing="20"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="FillAndExpand">
                <StackLayout 
                    Spacing="5"
                    HorizontalOptions="CenterAndExpand">
                    <Label 
                        TextColor="LightGray"
                        HorizontalTextAlignment="Center"
                        FontAttributes="Bold"
                        FontSize="Title"
                        Text="أدخل التفاصيل"/>
                    <Label 
                        FontSize="Subtitle"
                        HorizontalTextAlignment="Center"
                        TextColor="LightGray"
                        Text="أعط رقم هاتفك المحمول وكلمة المرور."/>
                </StackLayout>
                <StackLayout 
                    Orientation="Horizontal"
                    BackgroundColor="White"
                    Spacing="10"
                    Padding="10">
                    <!--<Frame 
                        Padding="15"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        BackgroundColor="Black"
                        CornerRadius="300"
                        HasShadow="False"/>
                    <BoxView 
                        HeightRequest="10"
                        Color="Black"
                        WidthRequest="1"/>
                    <Label 
                        VerticalTextAlignment="Center"
                        TextColor="Black"
                        FontSize="Small"
                        Text="+971"/>
                    <BoxView 
                        HeightRequest="10"
                        Color="Black"
                        WidthRequest="1"/>-->
                    <inputLayout:SfTextInputLayout
                        ContainerBackgroundColor="White"
                        IsHintAlwaysFloated="False"
                        ReserveSpaceForAssistiveLabels="False"
                        OutlineCornerRadius="0"
                        FocusedStrokeWidth="0"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand"
                        InputViewPadding="10,2"
                        HasError="False"
                        UnfocusedColor="White"
                        FocusedColor="White"
                        ShowCharCount="False"
                        ContainerType="Outlined">
                        <Entry 
                            PlaceholderColor="Gray"
                            Keyboard="Email"
                            VerticalTextAlignment="Center"
                            VerticalOptions="FillAndExpand"
                            HorizontalTextAlignment="Center"
                            Placeholder="أدخل رقمك"
                            HorizontalOptions="FillAndExpand"/>
                    </inputLayout:SfTextInputLayout>
                </StackLayout>
                <StackLayout 
                    Orientation="Horizontal"
                    BackgroundColor="White"
                    Spacing="10"
                    Padding="10">
                    <Image 
                        VerticalOptions="Center"
                        HeightRequest="30"
                        Aspect="AspectFit"
                        HorizontalOptions="Start"
                        Source="logout.png"/>
                    <BoxView 
                        HeightRequest="10"
                        Color="Black"
                        WidthRequest="1"/>
                    <inputLayout:SfTextInputLayout
                        ContainerBackgroundColor="White"
                        IsHintAlwaysFloated="False"
                        ReserveSpaceForAssistiveLabels="False"
                        OutlineCornerRadius="0"
                        FocusedStrokeWidth="0"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand"
                        InputViewPadding="10,2"
                        HasError="False"
                        UnfocusedColor="White"
                        FocusedColor="White"
                        ShowCharCount="False"
                        ContainerType="Outlined">
                        <Entry 
                            PlaceholderColor="Gray"
                            IsPassword="True"
                            VerticalTextAlignment="Center"
                            VerticalOptions="FillAndExpand"
                            HorizontalTextAlignment="Center"
                            Placeholder="كلمه السر"
                            HorizontalOptions="FillAndExpand"/>
                    </inputLayout:SfTextInputLayout>
                </StackLayout>
                <StackLayout
                    Spacing="15"
                    HorizontalOptions="CenterAndExpand"
                    Orientation="Horizontal">
                    <Label 
                        FontSize="Subtitle"
                        HorizontalTextAlignment="Center"
                        TextColor="LightGray"
                        Text="سجل هنا"/>
                    <Label 
                        FontSize="Subtitle"
                        HorizontalTextAlignment="Center"
                        TextColor="LightGray"
                        Text="ليس لديك حساب؟ "/>
                </StackLayout>
                <Button 
                    Padding="0"
                    FontAttributes="Bold"
                    CornerRadius="0"
                    FontSize="Medium"
                    TextColor="Black"
                    Visual="Material"
                    BackgroundColor="Goldenrod"
                    Text="تسجيل الدخول"/>
                <StackLayout
                    Spacing="15"
                    HorizontalOptions="CenterAndExpand"
                    Orientation="Horizontal">
                    <Label 
                        FontSize="Subtitle"
                        HorizontalTextAlignment="Center"
                        TextColor="Goldenrod"
